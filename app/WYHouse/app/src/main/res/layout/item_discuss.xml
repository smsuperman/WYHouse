<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7dp"
    android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_discuss_cir"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/img_square_p" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_discuss_nickName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="昵称"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/item_discuss_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="评论"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_discuss_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="time"
                android:textColor="@color/silver"
                android:textSize="8sp" />

            <ImageView
                android:id="@+id/item_discuss_rubbish"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="end"
                android:src="@drawable/ic_svg_rubbish"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>